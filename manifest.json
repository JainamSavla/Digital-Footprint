{
  "manifest_version": 3,
  "name": "Digital Footprints",
  "version": "1.0.0",
  "description": "Keeps track of time spent on the Internet and blocks sites after time limits",
  "icons": {
    "128": "icons/digital-footprint.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/digital-footprint.png"
    },
    "default_title": "Digital Footprints"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "scripting", "webNavigation", "activeTab"],
  "host_permissions": [
    "<all_urls>",
    "*://www.linkedin.com/*",
    "*://www.youtube.com/*",
    "*://m.youtube.com/*",
    "*://twitter.com/*",
    "*://x.com/*",
    "*://mobile.twitter.com/*",
    "*://mobile.x.com/*",
    "*://www.reddit.com/*",
    "*://old.reddit.com/*",
    "*://new.reddit.com/*",
    "*://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://www.linkedin.com/*",
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://twitter.com/*",
        "*://x.com/*",
        "*://mobile.twitter.com/*",
        "*://mobile.x.com/*",
        "*://www.reddit.com/*",
        "*://old.reddit.com/*",
        "*://new.reddit.com/*",
        "*://www.instagram.com/*"
      ],
      "css": ["stylessocialmedia.css"],
      "js": ["contentsocialmedia.js"],
      "run_at": "document_start"
    }
  ]
}
